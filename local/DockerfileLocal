FROM python:3.8.5

WORKDIR /app

RUN \
	apt-get install libpq-dev

COPY requirements.txt .

RUN \
	pip install pip==20.0.2 && \
	pip install -r requirements.txt

RUN \
	PYTHONDONTWRITEBYTECODE=True \
	export PYTHONDONTWRITEBYTECODE

COPY . /app

RUN mkdir -p tmp

